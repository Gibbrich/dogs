<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/nav_graph"
            app:startDestination="@+id/dogsListFragment">
    <fragment
            android:id="@+id/dogsListFragment"
            android:name="com.github.gibbrich.dogslist.ui.fragment.DogsListFragment"
            android:label="DogsListFragment"
            tools:layout="@layout/fragment_dogs_list">
        <!--todo - replace animated navigation to shared image transition-->
        <action
                android:id="@+id/action_dogsListFragment_to_dogDetailFragment"
                app:destination="@id/dogDetailFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"/>
    </fragment>
    <fragment
            android:id="@+id/dogDetailFragment"
            android:name="com.github.gibbrich.dogdetails.DogDetailFragment"
            android:label="DogDetailFragment"
            tools:layout="@layout/fragment_dog_detail"/>
</navigation>